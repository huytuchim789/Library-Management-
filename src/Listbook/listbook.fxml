<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:id="pane" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Listbook.ListBookController">
   <children>
      <TableView fx:id="tableView" layoutX="167.0" layoutY="65.0" prefHeight="400.0" prefWidth="1000.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <columns>
            <TableColumn fx:id="idCol" prefWidth="75.0" text="ID" />
            <TableColumn fx:id="titleCol" prefWidth="75.0" text="Title" />
            <TableColumn fx:id="categoryCol" prefWidth="75.0" text="Category" />
            <TableColumn fx:id="authorCol" prefWidth="75.0" text="Author" />
            <TableColumn fx:id="pubCol" prefWidth="75.0" text="Publisher" />
            <TableColumn fx:id="dateCol" prefWidth="75.0" text="Publish Date" />
            <TableColumn fx:id="editionCol" prefWidth="75.0" text="Book Edition" />
            <TableColumn fx:id="priceCol" prefWidth="75.0" text="Price" />
            <TableColumn fx:id="isAvailCol" prefWidth="75.0" text="Availablity" />
         </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
         <contextMenu>
            <ContextMenu>
              <items>
                <MenuItem mnemonicParsing="false" onAction="#refreshData" text="Refresh" />
                  <MenuItem mnemonicParsing="false" onAction="#deleteBook" text="Delete" />
                  <MenuItem mnemonicParsing="false" onAction="#editBook" text="Edit" />
              </items>
            </ContextMenu>
         </contextMenu>
      </TableView>
   </children>
</AnchorPane>
